<section class="core-values">
    <div class="container">
        <div class="row">
            {% for counter in informations %}
                <div class="col-12 col-sm-6 col-md-4">
                    <div class="core-value">
                        <i class="{{ counter.icon }}"></i>
                        <h4>{{ counter.title }}</h4>
                        <p>{{ counter.text }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>