<section class="counters">
    <div class="container">
        <div class="counters-container">
            <div class="row align-items-center">
                <div class="col-md-1"></div>
                <div class="col-md-2 counter">
                    <strong data-count="{{ first_counter.counter_number }}">0</strong>
                    <span>{{ first_counter.counter_text }}</span><span>{{ first_counter.counter_offset ?? '%' }}</span>
                </div>
                <div class="col-md-2 counter-avatar">
                    <img src="{{ stylesheet_directory_uri }}/assets/vectors/avatar-lego.svg" alt="">
                </div>
                {% for counter in other_counters %}
                    {% if(loop.index <=3 ) %}
                    <div class="col-md-2 counter">
                        <strong data-count="{{ counter.counter_number }}">0</strong>
                        <span>{{ counter.counter_text }}</span><span>{{ counter.counter_offset ?? '' }}</span>
                    </div>
                    {%  endif %}
                {% endfor %}

                <div class="col-md-1"></div>
            </div>
        </div>
    </div>
</section>
